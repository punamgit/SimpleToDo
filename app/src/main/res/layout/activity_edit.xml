<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.codepath.simpletodo.EditActivity">


    <TextView
        android:text="Item Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:id="@+id/txtEditNameLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txtEditNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="14dp"
        android:padding="10dp"
        android:id="@+id/etEditedName"
        android:background="@drawable/edittext_bg"/>

    <TextView
        android:text="Item Prioirity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/etEditedName"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:id="@+id/txtEditPriorityLabel" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/priority"
        android:id="@+id/spinnerPriority"
        android:layout_below="@id/txtEditPriorityLabel"/>
    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveEdit"
        android:layout_below="@id/spinnerPriority"
        android:layout_alignParentLeft="true"

        android:layout_marginTop="49dp" />
</RelativeLayout>
